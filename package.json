{
  "name": "condition-flags-parser",
  "version": "1.0.0",
  "description": "Parse/Apply JS like condition expressions on an object of flags",
  "engines": {
    "node": ">=14.17.0"
  },
  "type": "module",
  "main": "./src/index.mjs",
  "types": "./types/index.d.ts",
  "scripts": {
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XRPL-Labs/js-condition-parser.git"
  },
  "author": "Wietse Wind <w@xrpl-labs.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/XRPL-Labs/js-condition-parser/issues"
  },
  "homepage": "https://github.com/XRPL-Labs/js-condition-parser#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.19.3",
    "jest": "^29.1.2"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|js?|tsx?|ts?)$",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.mjs$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "mjs"
    ]
  }
}
